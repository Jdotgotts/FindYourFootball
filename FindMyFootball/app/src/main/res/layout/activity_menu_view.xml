<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jackg.findyourfootball.MenuController">

    <Button
        android:id="@+id/leagueBtn"
        android:layout_width="176dp"
        android:layout_height="60dp"
        android:layout_marginEnd="105dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Football Leagues or Cups"
        app:layout_constraintEnd_toStartOf="@+id/venueBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/venueBtn"
        android:layout_width="176dp"
        android:layout_height="60dp"
        android:layout_marginEnd="105dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Venues"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leagueBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FF0000"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="#ffffff"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="106dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/welcomeText"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/footballClubBtn"
        android:layout_width="176dp"
        android:layout_height="60dp"
        android:layout_marginEnd="105dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Football Clubs"
        app:layout_constraintEnd_toStartOf="@+id/fixtureBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leagueBtn" />

    <Button
        android:id="@+id/fixtureBtn"
        android:layout_width="176dp"
        android:layout_height="60dp"
        android:layout_marginEnd="105dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Fixtures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/footballClubBtn"
        app:layout_constraintTop_toBottomOf="@+id/venueBtn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="393dp"
        android:layout_height="340dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:srcCompat="@drawable/logo" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/footballClubBtn"
        app:layout_constraintVertical_bias="0.702">

        <ImageView
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/facebook_ico" />

        <ImageView
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/insta" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
